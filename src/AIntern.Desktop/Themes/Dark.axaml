<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background Colors -->
    <SolidColorBrush x:Key="WindowBackground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="SidebarBackground" Color="#252526" />
    <SolidColorBrush x:Key="StatusBarBackground" Color="#007ACC" />
    <SolidColorBrush x:Key="ControlBackground" Color="#2D2D30" />
    <SolidColorBrush x:Key="InputBackground" Color="#3C3C3C" />

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#3C3C3C" />

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimary" Color="#CCCCCC" />
    <SolidColorBrush x:Key="TextSecondary" Color="#FFFFFF" />
    <SolidColorBrush x:Key="TextMuted" Color="#808080" />

    <!-- Message Colors -->
    <SolidColorBrush x:Key="UserMessageBackground" Color="#0E639C" />
    <SolidColorBrush x:Key="AssistantMessageBackground" Color="#2D2D30" />

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#007ACC" />
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#1C97EA" />

    <!-- Status Colors -->
    <SolidColorBrush x:Key="ErrorBackground" Color="#5A1D1D" />
    <SolidColorBrush x:Key="ErrorForeground" Color="#F48771" />
    <SolidColorBrush x:Key="SuccessBackground" Color="#1D3D1D" />
    <SolidColorBrush x:Key="SuccessForeground" Color="#89D185" />

    <!-- Button Styles -->
    <ControlTheme x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="CornerRadius" Value="4" />

        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource AccentHoverBrush}" />
        </Style>

        <Style Selector="^:disabled">
            <Setter Property="Opacity" Value="0.5" />
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="DangerButton" TargetType="Button">
        <Setter Property="Background" Value="#C42B1C" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="CornerRadius" Value="4" />

        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="#E81123" />
        </Style>

        <Style Selector="^:disabled">
            <Setter Property="Opacity" Value="0.5" />
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="SubtleButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="CornerRadius" Value="4" />

        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource ControlBackground}" />
        </Style>
    </ControlTheme>

    <!-- Hover/Selection Colors -->
    <SolidColorBrush x:Key="HoverBackground" Color="#2A2D2E" />
    <SolidColorBrush x:Key="SelectedBackground" Color="#094771" />

    <!-- TreeView Colors (Catppuccin Mocha) -->
    <SolidColorBrush x:Key="TreeViewItemSelectedBackground" Color="#45475A" />
    <SolidColorBrush x:Key="TreeViewItemHoverBackground" Color="#313244" />

    <!-- Error background for file explorer -->
    <SolidColorBrush x:Key="SystemErrorBackgroundBrush" Color="#5A1D1D" />
    <SolidColorBrush x:Key="SystemErrorTextBrush" Color="#F48771" />

    <!-- Warning Colors -->
    <SolidColorBrush x:Key="WarningBackground" Color="#4D3D00" />
    <SolidColorBrush x:Key="WarningForeground" Color="#FFD700" />

    <!-- System Prompt Colors -->
    <SolidColorBrush x:Key="SystemPromptBackground" Color="#1A3A5C" />

    <!-- Link Colors -->
    <SolidColorBrush x:Key="LinkForeground" Color="#3794FF" />
    <SolidColorBrush x:Key="LinkHoverForeground" Color="#4DA8FF" />

    <!-- Prompt Item Button -->
    <ControlTheme x:Key="PromptItemButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Cursor" Value="Hand" />

        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource HoverBackground}" />
        </Style>

        <Style Selector="^:pressed">
            <Setter Property="Background" Value="{DynamicResource SelectedBackground}" />
        </Style>
    </ControlTheme>

    <!-- Link Button -->
    <ControlTheme x:Key="LinkButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource LinkForeground}" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="BorderThickness" Value="0" />

        <Style Selector="^:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource LinkHoverForeground}" />
        </Style>

        <Style Selector="^:disabled">
            <Setter Property="Opacity" Value="0.5" />
        </Style>
    </ControlTheme>

    <!-- Code Editor TextBox -->
    <ControlTheme x:Key="CodeEditorTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{DynamicResource InputBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
        <Setter Property="FontFamily" Value="Consolas, 'Courier New', monospace" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="AcceptsReturn" Value="True" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </ControlTheme>

    <!-- Tab Bar Colors -->
    <SolidColorBrush x:Key="TabBarBackgroundBrush" Color="#252526" />
    <SolidColorBrush x:Key="TabActiveBackgroundBrush" Color="#1E1E1E" />
    <SolidColorBrush x:Key="TabHoverBackgroundBrush" Color="#2D2D2D" />

    <!-- Editor Colors -->
    <SolidColorBrush x:Key="EditorBackgroundBrush" Color="#1E1E1E" />
    <SolidColorBrush x:Key="EditorForegroundBrush" Color="#D4D4D4" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#CCCCCC" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="#808080" />
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#2A2D2E" />

    <!-- Context Bar Colors (v0.3.4d) -->
    <SolidColorBrush x:Key="ContextBarBackgroundBrush" Color="#1E1E1E" />
    <SolidColorBrush x:Key="ContextPillBackgroundBrush" Color="#2D2D2D" />
    <SolidColorBrush x:Key="ContextPillBorderBrush" Color="#3E3E3E" />
    <SolidColorBrush x:Key="ContextPillHoverBrush" Color="#383838" />
    <SolidColorBrush x:Key="SelectionAccentBrush" Color="#569CD6" />
    <SolidColorBrush x:Key="CloseButtonHoverBrush" Color="#4E4E4E" />

    <!-- Badge Colors -->
    <SolidColorBrush x:Key="BadgeBackgroundBrush" Color="#3E3E3E" />
    <SolidColorBrush x:Key="BadgeForegroundBrush" Color="#CCCCCC" />

    <!-- Token Limit Warning/Error Colors -->
    <SolidColorBrush x:Key="WarningBrush" Color="#DDB700" />
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#332D00" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#F14C4C" />
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="#331111" />

</ResourceDictionary>

